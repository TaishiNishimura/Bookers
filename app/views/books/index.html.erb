  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to "book.title", new_book_path %>
          </td>
          <td>
            <%= link_to "book.body", new_book_path %>
          </td>
          <td>
            <a class= "show_params[:id]" href="/books/params[:id]">Show</a>
          </td>
          <td>
            <a class= "edit_params[:id]" href="/books/params[:id]/edit">Edit</a>
          </td>
          <td>
            <a data-confirm= "Are you sure?" class="destroy_params[:id]" rel="nofollow" data-method="delete" href="/books/params[:id]">Destroy</a>
          </td>
        </tr>
      </tbody>
    </table>
    <h2>New Book</h2>
    <%= form_with model:@book, local:true do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Body</h4>
     <%= f.text_area :body %>
     <%= f.submit 'Create Book' %>
    <% end %>
  </body>
</html>